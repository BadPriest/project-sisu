{
  "extends": [
    "react-app",
    "react-app/jest",
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "airbnb/hooks",
    "prettier"
    // "prettier/react"
  ],
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "fragment": "Fragment",
      "version": "detect"
    }
  },
  "rules": {
    "react/jsx-props-no-spreading": ["warn", { "custom": "ignore" }] // Set in order to simplify prop passage - and even encapsulate data somewhat, idk)
  }
}
